<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>


<VBox fx:id="mainLayout" alignment="CENTER" stylesheets="@SelectMenu.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label fx:id="titleLabel" alignment="TOP_CENTER" contentDisplay="TOP" minHeight="150.0" minWidth="680.0" prefHeight="150.0" prefWidth="680.0" stylesheets="@SelectMenu.css" text="Select Game Mode" />
      <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="10.0">
         <children>
            <Button fx:id="relaxButton" focusTraversable="false" minHeight="100.0" minWidth="300.0" mnemonicParsing="false" onAction="#handleRelaxButton" prefHeight="100.0" prefWidth="300.0" styleClass="centered-button" stylesheets="@SelectMenu.css" text="Relax" />
            <Button fx:id="sprintButton" focusTraversable="false" minHeight="100.0" minWidth="300.0" mnemonicParsing="false" prefHeight="100.0" prefWidth="300.0" styleClass="centered-button" stylesheets="@SelectMenu.css" text="Sprint" />
            <Button fx:id="blitzButton" focusTraversable="false" minHeight="100.0" minWidth="300.0" mnemonicParsing="false" onAction="#handleBlitzButton" prefHeight="100.0" prefWidth="300.0" styleClass="centered-button" stylesheets="@SelectMenu.css" text="Blitz" />
            <Button fx:id="exitButton" focusTraversable="false" minHeight="100.0" minWidth="300.0" mnemonicParsing="false" onAction="#handleExitButton" prefHeight="100.0" prefWidth="300.0" styleClass="centered-button" stylesheets="@SelectMenu.css" text="Exit" />
         </children>
      </VBox>
   </children>
</VBox>
