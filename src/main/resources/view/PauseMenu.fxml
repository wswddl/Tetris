<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label fx:id="pausedLabel" alignment="TOP_CENTER" minHeight="150.0" minWidth="300.0" prefHeight="150.0" prefWidth="300.0" stylesheets="@PauseMenu.css" text="Paused" />
      <HBox alignment="CENTER_RIGHT">
         <children>
            <VBox minWidth="800.0" />
            <VBox fx:id="vbox" alignment="CENTER_RIGHT" prefHeight="200.0" prefWidth="114.0" spacing="20.0">
               <children>
                  <Button fx:id="resumeButton" focusTraversable="false" minHeight="100.0" minWidth="800.0" mnemonicParsing="false" onAction="#handleResumeButton" prefWidth="1600.0" styleClass="left-aligned-button" stylesheets="@PauseMenu.css" text="Resume" />
                  <Button fx:id="restartButton" focusTraversable="false" minHeight="100.0" minWidth="800.0" mnemonicParsing="false" onAction="#handleRestartButton" prefWidth="1600.0" styleClass="left-aligned-button" stylesheets="@PauseMenu.css" text="Restart" />
                  <Button fx:id="exitButton" focusTraversable="false" minHeight="100.0" minWidth="800.0" mnemonicParsing="false" onAction="#handleExitButton" prefWidth="1600.0" styleClass="left-aligned-button" stylesheets="@PauseMenu.css" text="Exit" />
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</VBox>
